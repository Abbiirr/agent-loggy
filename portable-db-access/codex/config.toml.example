# Example `~/.codex/config.toml`
#
# Prefer the CLI-based setup in `portable-db-access/mcp/codex_mcp_add_windows.ps1`.
# If you use this config file, keep the DSN in an env var (DB_READONLY_DSN).

[mcp_servers.db]
command = "powershell"
args = ["-NoProfile", "-ExecutionPolicy", "Bypass", "-File", "C:\\path\\to\\portable-db-access\\mcp\\dbhub_stdio_windows.ps1", "-MaxRows", "1000"]

[shell_environment_policy]
include_only = ["PATH", "HOME", "USERPROFILE", "DB_READONLY_DSN", "DSN"]
